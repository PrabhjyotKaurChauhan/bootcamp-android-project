<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_expanded_controller_background_color">


    <Button
        android:id="@+id/submit"
        android:layout_width="388dp"
        android:layout_height="54dp"
        android:layout_marginBottom="44dp"
        android:background="@color/colorPrimaryDark"
        android:focusable="true"
        android:text="Submit Review"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/productname"
        android:layout_width="354dp"
        android:layout_height="47dp"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="Enter Product Name"
        android:inputType="textPersonName"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:textColorHint="@color/wallet_bright_foreground_holo_dark"
        app:layout_constraintBottom_toTopOf="@+id/review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/review"
        android:layout_width="353dp"
        android:layout_height="106dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Enter Your Review..."
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:textColorHint="@color/wallet_bright_foreground_holo_dark"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="139dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="74dp"
        android:text="Give Your Review"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/productname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>